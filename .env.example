# API Configuration
API_HOST=0.0.0.0    # The host to bind the API to. Use 0.0.0.0 to listen on all interfaces
API_PORT=8002       # Trade Discovery service port
METRICS_PORT=8092   # Port for Prometheus metrics endpoint

# Database Configuration
DB_HOST=localhost           # PostgreSQL database host
DB_PORT=5432                # PostgreSQL database port
DB_NAME=trade_discovery     # Name of the database
DB_USER=postgres            # Database user
DB_PASSWORD=your_password   # Database password (change this)

# Service Dependencies
MARKET_ANALYSIS_HOST=localhost   # Hostname of the Market Analysis service
MARKET_ANALYSIS_PORT=8000        # Port of the Market Analysis service
TRADE_MANAGER_HOST=localhost     # Hostname of the Trade Manager service
TRADE_MANAGER_PORT=8001          # Port of the Trade Manager service

# Discovery Configuration
ASSET_POOL_UPDATE_INTERVAL=3600   # How often to update the asset pool (in seconds)
ANALYSIS_BATCH_SIZE=100           # Number of assets to analyze in each batch
MAX_CONCURRENT_ANALYSES=10        # Maximum number of concurrent analysis tasks

# Monitoring Configuration
ENABLE_METRICS=true   # Enable Prometheus metrics collection
LOG_LEVEL=INFO        # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)

# Development
DEBUG=false               # Enable/disable debug mode
ENVIRONMENT=development   # Current environment (development/staging/production)